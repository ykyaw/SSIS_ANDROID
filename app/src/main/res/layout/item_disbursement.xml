<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table_row_shape"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Desc: "
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_desc"
            android:text="this is a desc"
            android:textColor="@color/black"
            android:textSize="16dp"
            />
    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty Req: "
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/qty_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty Dis: "
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/qty_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:id="@+id/remarks_title"
                android:text="Remarks: "
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/dis_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty Rec: "
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/qty_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/edit"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dept Remarks: "
                android:textColor="@color/black"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/dept_remarks"
                android:layout_width="wrap_content"
                android:drawableRight="@drawable/edit"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clerk Remarks: "
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/clerk_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>

</LinearLayout>