<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="center"-->
<!--                android:text="Qty"/>-->
<!--        </LinearLayout>-->

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/store_sup_av_detail_list"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:id="@+id/store_sup_av_detail_list_btn_panel"
            android:layout_weight="3">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/store_sup_av_reject_reason"
                android:hint="reason"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_sup_av_reject_btn"
                    android:text="reject"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_sup_av_approve_btn"
                    android:text="approve"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_man_av_approve_btn"
                    android:text="Proceed"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/av_alert"
                    android:visibility="invisible"
                    android:text="Adjustment Price >250, Proceed to Manager's Approval"

                    />
            </LinearLayout>


        </LinearLayout>


</LinearLayout>

